<?xml version="1.0" encoding="ISO-8859-1"?>
<?xml-stylesheet type="text/xsl" href="yarpmanifest.xsl"?>
<application>

    <!-- REQUIRED -->
    <dependencies>
        <port>/yarprun</port>
    </dependencies>


    <!-- GENERIC INFORMATION -->
    <name>iCubProprioception-SIM</name>
    <description>Superimpose the hand skeleton and/or 3D CAD model on the camera images of icubSim</description>
    <version>4.1.2</version>

    <authors>
        <author email="claudio.fantacci@iit.it">Claudio Fantacci</author>
    </authors>


    <!-- RQUIRED MODULES -->
    <module>
        <name>iCubProprioception</name>
        <node>yarprun</node>
        <parameters>--robot icubSim --ikin --ext --from parameters.ini</parameters>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /view/cam/left --x 20 --y 0 --RefreshTime 30</parameters>
        <node>yarprun</node>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /view/cam/right --x 20 --y 370 --RefreshTime 30</parameters>
        <node>yarprun</node>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /view/cam/left/skeleton --x 340 --y 0 --RefreshTime 30</parameters>
        <node>yarprun</node>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /view/cam/left/ikin --x 660 --y 0 --RefreshTime 30</parameters>
        <node>yarprun</node>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /view/cam/left/ext --x 980 --y 0 --RefreshTime 30</parameters>
        <node>yarprun</node>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /view/cam/right/ext --x 980 --y 370 --RefreshTime 30</parameters>
        <node>yarprun</node>
    </module>


    <!-- REQUIRED CONNECTIONS -->
    <connection>
        <from>/icubSim/cam/left</from>
        <to>/view/cam/left</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icubSim/cam/right</from>
        <to>/view/cam/right</to>
        <protocol>tcp</protocol>
    </connection>

    <!-- RC: SKELETON -->
    <connection>
        <from>/icubSim/cam/left</from>
        <to>/iCubProprioception/SkeletonSuperimposer/cam/left:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/iCubProprioception/SkeletonSuperimposer/cam/left:o</from>
        <to>/view/cam/left/skeleton</to>
        <protocol>tcp</protocol>
    </connection>

    <!-- RC: iKin CAD -->
    <connection>
        <from>/icubSim/cam/left</from>
        <to>/iCubProprioception/iKinCADSuperimposer/cam/left:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/iCubProprioception/iKinCADSuperimposer/cam/left:o</from>
        <to>/view/cam/left/ikin</to>
        <protocol>tcp</protocol>
    </connection>

    <!-- RC: Ext CAD -->
    <connection>
        <from>/icubSim/cam/left</from>
        <to>/iCubProprioception/ExtCADSuperimposer/cam/left:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icubSim/cam/right</from>
        <to>/iCubProprioception/ExtCADSuperimposer/cam/right:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/iCubProprioception/ExtCADSuperimposer/cam/left:o</from>
        <to>/view/cam/left/ext</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/iCubProprioception/ExtCADSuperimposer/cam/right:o</from>
        <to>/view/cam/right/ext</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/hand-tracking/left/result/estimates:o</from>
        <to>/iCubProprioception/ExtCADSuperimposer/cam/left/hand/right_pose:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/hand-tracking/right/result/estimates:o</from>
        <to>/iCubProprioception/ExtCADSuperimposer/cam/right/hand/right_pose:i</to>
        <protocol>tcp</protocol>
    </connection>

</application>
