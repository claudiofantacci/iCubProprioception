<?xml version="1.0" encoding="ISO-8859-1"?>
<?xml-stylesheet type="text/xsl" href="yarpmanifest.xsl"?>
<application>

    <!-- GENERIC INFORMATION -->
    <name>iCubProprioception-BATCH</name>
    <description>Superimpose the hand skeleton and/or 3D CAD model on the camera images stored from iCub</description>
    <version>2.1.0</version>

    <authors>
        <author email="claudio.fantacci@iit.it">Claudio Fantacci</author>
    </authors>


    <!-- RQUIRED MODULES -->
    <module>
        <name>iCubProprioception</name>
        <node>localhost</node>
        <parameters>--robot icub --batch --from parameters.ini</parameters>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /view/cam/left --x 20 --y 0 --RefreshTime 30</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /view/cam/right --x 20 --y 370 --RefreshTime 30</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /view/cam/left/batch --x 340 --y 0 --RefreshTime 30</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /view/cam/right/batch --x 340 --y 370 --RefreshTime 30</parameters>
        <node>localhost</node>
    </module>


    <!-- REQUIRED CONNECTIONS -->
    <connection>
        <from>/icub/camcalib/left/out</from>
        <to>/view/cam/left</to>
        <protocol>udp</protocol>
    </connection>

    <connection>
        <from>/icub/camcalib/right/out</from>
        <to>/view/cam/right</to>
        <protocol>udp</protocol>
    </connection>

    <!-- RC: BATCH -->
    <connection>
        <from>/icub/camcalib/left/out</from>
        <to>/iCubProprioception/BatchCADSuperimposer/cam/left:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/camcalib/right/out</from>
        <to>/iCubProprioception/BatchCADSuperimposer/cam/right:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/iCubProprioception/BatchCADSuperimposer/cam/left:o</from>
        <to>/view/cam/left/batch</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/iCubProprioception/BatchCADSuperimposer/cam/right:o</from>
        <to>/view/cam/right/batch</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/hand-tracking/left/result/estimates:o</from>
        <to>/iCubProprioception/BatchCADSuperimposer/cam/left/hand/right_pose:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/hand-tracking/right/result/estimates:o</from>
        <to>/iCubProprioception/BatchCADSuperimposer/cam/right/hand/right_pose:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/head/state:o</from>
        <to>/iCubProprioception/BatchCADSuperimposer/cam/left/head:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/head/state:o</from>
        <to>/iCubProprioception/BatchCADSuperimposer/cam/right/head:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/right_arm/state:o</from>
        <to>/iCubProprioception/BatchCADSuperimposer/cam/left/right_arm:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/right_arm/state:o</from>
        <to>/iCubProprioception/BatchCADSuperimposer/cam/right/right_arm:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/torso/state:o</from>
        <to>/iCubProprioception/BatchCADSuperimposer/cam/left/torso:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/torso/state:o</from>
        <to>/iCubProprioception/BatchCADSuperimposer/cam/right/torso:i</to>
        <protocol>tcp</protocol>
    </connection>

    <!--connection>
        <from>/icub/right_arm/analogs/state:o</from>
        <to>/iCubProprioception/BatchCADSuperimposer/cam/left/right_analogs:i</to>
        <protocol>tcp</protocol>
    </connection-->

    <!--connection>
        <from>/icub/right_arm/analogs/state:o</from>
        <to>/iCubProprioception/BatchCADSuperimposer/cam/right/right_analogs:i</to>
        <protocol>tcp</protocol>
    </connection-->

</application>
